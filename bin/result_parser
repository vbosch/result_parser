#!/usr/bin/env ruby

require File.expand_path(File.join(File.dirname(__FILE__), %w[.. lib result_parser]))

require 'ap'
require 'trollop'
require 'fileutils'

opts = Trollop::options do
 version "result_parser 0.0.1 (c) 2011 Vicente Bosch Campos"
 banner <<-EOS
 Result parser is a command line tool that read a result file generated by the trainer and formats results so that
 they are readable by gnuplot.
 Usage:
    result_parser [options]
    where [options] are:
 EOS
    opt :result_file, "File containing the results", :type => :string
end

 Trollop::die :training_list_file, "Result file was not defined" unless opts[:result_file]
 Trollop::die :training_list_file, "Indicated result file does not exist" unless File.exist?(opts[:result_file])

current_results = ResultParser::ResultList.new(opts[:result_file],"test")
current_results.read
current_results.write("out.txt")

